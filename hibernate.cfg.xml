<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="transferRestDB" transaction-type="RESOURCE_LOCAL">
        <properties>
        <property name="connection.url" value="jdbc:mysql://localhost:3306/try_spark_api"/>
        <property name="dialect" value="org.hibernate.dialect.MySQL57Dialect"/>
        <property name="hibernate.connection.username" value="root"/>
        <property name="hibernate.connection.password" value="monster"/>

        <property name="show_sql" value="true"/>

        <property name="hbm2ddl.auto" value="update"/
        </properties>
    </persistence-unit>
</persistence>
